<header>
  <div class="container py-2">
    <nav>
      <div>
        <a href="/">
          <strong>Home</strong>
        </a>
      </div>
    </nav>
  </div>
</header>
<main>
  <div class="container">
    <h1><%= @num_dice =%>d<%= @sides =%></h1>

    <ol>
      <% @rolls.each do |a_roll| %>
        <li>
          Result: <%= a_roll %>
        </li>
      <% end %>
    </ol>

    <a href="/process_roll?dice=<%= @num_dice =%>&sides=<%= @sides =%>">
    Roll <%= @num_dice =%>d<%= @sides =%> again
    </a>
</div>

</main>
